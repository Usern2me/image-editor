/* COLOR PICKER */
.{prefix}-container
    div.tui-colorpicker-clearfix
        display: none;
        li
            border:1px solid #D1D1D1;
            border-radius: 50%;
    .tui-colorpicker-palette-preview
        border-radius: 100%;
        float: left;
        width: 17px;
        height: 17px;
        border: 0;
    .color-picker-control
        display: block;
        width: 172px;
        .tui-colorpicker-palette-toggle-slider
            display: none;
        .tui-colorpicker-palette-button
            width:24px;
            height:24px;
            border:1px solid #D1D1D1;
            border-radius: 100%;
            margin:4px;
        .tui-colorpicker-container,
        .tui-colorpicker-palette-container ul,
        .tui-colorpicker-palette-container
            width: 100%;
            height: auto;
        .tui-colorpicker-selected
            border:none;
        .tui-colorpicker-actived
            border:1px solid;
            border-radius: 50%;

    .filter-color-item
        .color-picker-control label
            font-color: #333;
            font-weight: normal;
            margin-right: 7pxleft
        .tui-image-editor-checkbox
            margin-top: 0;
            input + label:before
              left: -16px;
    .color-picker
        width: 100%;
        height: auto;
    .color-picker-value 
        width: 32px;
        height: 32px;
        border: 0px;
        border-radius: 100%;
        margin: auto;
        margin-bottom: 1px;
        &.transparent
            border: 1px solid #cbcbcb;
            background-size: cover;
            background-image: url('data:image/png;base64,');

    .color-picker-value + label
        color: #fff;

    .{prefix}-submenu svg > use
        display: none;
    .{prefix}-submenu svg > use.normal
        display: block;
